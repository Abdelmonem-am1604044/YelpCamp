<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center">Edit <%= foundCamp.name %> Camp</h1>

    <form action="/campgrounds/<%= foundCamp._id %>?_method=PUT" method="post" style="margin-top: 20px">
        <div style="width: 50%; margin: 0 auto;">
            <div class="form-group">
                <label for="CampName">Camp Name:</label>
                <input type="text" placeholder="Camp Name" name="camp[name]" class="form-control" id="CampName"
                       value="<%= foundCamp.name %>" required>
            </div>

            <div class="form-group">
                <label for="imageUrl">Image URL:</label>
                <input type="text" placeholder="Camp Image URL" value="<%= foundCamp.image %>" name="camp[image]"
                       class="form-control" id="imageUrl"
                       required>
            </div>

            <div class="form-group">
                <label for="price">Price:</label>
                <input type="number" placeholder="Camp Price" name="camp[price]" value="<%= foundCamp.price %>" class="form-control" id="price"
                       min="0.01" step="0.01" required>
            </div>

            <div>
                <label for="description">Description:</label>
                <textarea class="form-control" rows="3" id="camp[description]" required name="description"
                          placeholder="Description"><%= foundCamp.description %></textarea>
            </div>

            <input type="submit" class="btn btn-primary btn-block" style="margin-top: 20px">
            <a style="margin-top: 30px;" href="/campgrounds/<%= foundCamp._id %>">Go Back</a>
        </div>
    </form>
</div>
<% include ../partials/footer %>