<% include ../partials/header.ejs %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To YelpCmap!!!</h1>
            <p>View All Our Hand Picked Camps For You</p>
            <p>
                <a class="btn btn-lg btn-primary" href="/campgrounds/new">Add New CampGround</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% camps.forEach(function (camp) { %>
            <div class="col-md-4 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= camp.image %>" class="img-rounded">
                    <div class="caption">
                        <h3> <%= camp.name %> </h3>
                    </div>
                    <a href="/campgrounds/<%= camp._id%>" class="btn btn-primary">More Info</a>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<% include ../partials/footer.ejs %>