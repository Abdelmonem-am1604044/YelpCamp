<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center">Add New Comment To <%= campground.name %> </h1>

    <form method="post" action="/campgrounds/<%= campground._id %>/comments" style="margin-top: 20px">
        <div style="width: 50%; margin: 0 auto;">
            <div>
                <label for="description">Text:</label>
                <textarea class="form-control" rows="3" id="description" required name="comment[text]"
                          placeholder="Text"></textarea>
            </div>

            <input type="submit" class="btn btn-primary btn-block" style="margin-top: 20px">
            <a style="margin-top: 30px;" href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </form>
</div>
<% include ../partials/footer %>